{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "commonjs",
		"target": "ESNext",
		"esModuleInterlop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
        "resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
            "src/*": ["./src/*"]
		},
		"include": ["src/**/*"]
	}
}
